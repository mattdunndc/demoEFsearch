<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - OCC Demo</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link href="//cdnjs.cloudflare.com/ajax/libs/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet"/>

    <script src="~/Scripts/jquery-1.10.2.js"></script>
    
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/angular-route.js"></script>
    <script src="~/Scripts/angular-resource.min.js"></script>

    <!-- angular pagination -->
    <script src="~/Scripts/angular-pagination/dirPagination.js"></script>

    <!-- toaster requires jquery above angular -->
    <script src="~/Scripts/toastr.min.js"></script>
    <link href="~/Content/toastr.min.css" rel="stylesheet" />
    
    <script src="~/app/demoapp.js"></script>
    <script src="~/app/controllers/aboutCtrl.js"></script>
    <script src="~/app/controllers/searchCtrl.js"></script>
    <script src="~/app/controllers/homeCtrl.js"></script>
    <script src="~/app/controllers/deptCtrl.js"></script>
    <script src="~/app/controllers/institutionCtrl.js"></script>
    <script src="~/app/controllers/instAddEditCtrl.js"></script>
    <script src="~/app/services/services.js"></script>

</head>
<body ng-app="demoapp">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("OCC Demo", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Department", "Department", "Home")</li>
                    <li>@Html.ActionLink("Institution", "Institution", "Home")</li>
                    <li>@Html.ActionLink("Search", "Search", "Home")</li>
                </ul>
                <p class="nav navbar-text navbar-right">Hello, @User.Identity.Name!</p>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - OCC Demo</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

   
</body>
</html>
